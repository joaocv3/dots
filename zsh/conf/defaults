# vim: ft=zsh

# set correct locale variables
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LC_CTYPE=UTF-8

# set editor
export EDITOR=nvim

# Enable emacs keys
bindkey -e

# Disable flow control
stty -ixon

setopt EXTENDED_GLOB # enable awesome extended globbing
setopt GLOB_COMPLETE # use glob complete
setopt NO_CASE_GLOB # disable case when globbing
setopt LIST_ROWS_FIRST # autocomplete cycles horizontally first

# Load POSIX regex module
zmodload zsh/regex

# setup cd options
DIRSTACKSIZE=8
setopt AUTOPUSHD PUSHDMINUS PUSHDSILENT PUSHDTOHOME

# Enable dynamic prompt
setopt PROMPT_SUBST
autoload -U colors # Enable colors in prompt

# configure pager
export LESS_TERMCAP_mb=$(tput setaf 6) # cyan
export LESS_TERMCAP_md=$(tput setaf 2) # green
export LESS_TERMCAP_me=$(tput sgr0)
export LESS_TERMCAP_mr=$(tput rev)
export LESS_TERMCAP_mh=$(tput dim)
export LESS_TERMCAP_so=$(tput setaf 0; tput setab 3) # yellow box
export LESS_TERMCAP_se=$(tput rmso; tput sgr0)
export LESS_TERMCAP_us=$(tput rmul; tput setaf 1) # red
export LESS_TERMCAP_ue=$(tput rmul; tput sgr0)
export LESS_TERMCAP_ZN=$(tput ssubm)
export LESS_TERMCAP_ZV=$(tput rsubm)
export LESS_TERMCAP_ZO=$(tput ssupm)
export LESS_TERMCAP_ZW=$(tput rsupm)
export PAGER=less
